<h1>My Friends</h1>
<h3>Search for Friends</h3>
<div id="stock-lookup">
  <%= form_with(url: search_friends_path, method: :get, remote: true, id: "friend-lookup-form") do %>
    <div class="form-group no-padding text-center col-md-12 row">
      <div class="col-md-10">
        <%= text_field_tag :search_params, params[:search_params], placeholder: "Enter name or email", autofocus: true, class: "form-control input-lg" %>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit, class: "btn btn-success btn-lg") do %>
          <i class="fa fa-search"></i> search
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
  <%= render "friends/result"%>
</div> 