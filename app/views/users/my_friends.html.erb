<%= render 'friends/lookup'%>


<% if @friendships.size > 0%>
  <table class="table table-striped table-dark">
    <thead class="thead-dark">
      <tr>
        <th colspan="3" class="page-header">
          <h2>My Friends</h2>
        </th>
      </tr>
      <tr>  
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each_with_index do |friend,index|%>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= friend.full_name %></td>
          <td><%= friend.email %></td>
          <td>
              <%= link_to "View Profile", user_path(friend), class: "btn btn-xs btn-primary" %>
              <%= link_to "Remove Friend", friendship_path(friend), method: :delete, class: "btn btn-xs btn-danger", data: {confirm: "Are you sure?"}%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
    <div class="row col-lg-12">
        <p class="lead">
            You don't have any friends yet. Please add some
        </p>
    </div>
<% end %>