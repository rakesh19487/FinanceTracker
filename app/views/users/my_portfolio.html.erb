<h1>My Portfolio</h1>
<h3>Search Stocks</h3>
<div id="stock-lookup">
  <%= form_with(url: search_stocks_path, method: :get, remote: true, id: "stock-lookup-form") do %>
    <div class="form-group no-padding text-center col-md-12 row">
      <div class="col-md-10">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control input-lg" %>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit, class: "btn btn-success btn-lg") do %>
          <i class="fa fa-search"></i> Look up a stock
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
  <%= render "result"%>
</div> 

<%= render "stocks/list"%>