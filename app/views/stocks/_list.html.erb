
<% if @user_stocks.size > 0 %>
  <table class="table table-striped table-dark">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Symbol</th>
        <th scope="col">Company</th>
        <th scope="col">Latest Price</th>
        <% if @user == current_user %>
          <th scope="col">Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @user_stocks.each_with_index do |user_stock,index|%>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= user_stock.ticker %></td>
          <td><%= user_stock.name %></td>
          <td><%= user_stock.last_price %></td>
          <% if @user == current_user %>
            <td><%= link_to "Delete", user_stock_path(user_stock), method: :delete, class: "btn btn-xs btn-danger", data: {confirm: "Are you sure?"}%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %> 
    <div class="row col-lg-12">
        <p class="lead">
            Not tracking any stocks
        </p>
    </div>

<% end %>
